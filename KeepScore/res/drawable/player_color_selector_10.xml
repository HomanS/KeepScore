<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
    	<shape >
    	    <solid android:color="@color/player_color_10"/>
    	    <stroke android:color="@color/holo_light_blue_1" android:width="2dp"/>
    	    <corners android:radius="2dp"/>
    	</shape>
    </item>
    
    <item android:state_selected="true">
        <shape >
            <solid android:color="@color/player_color_10"/>
            <stroke android:color="@color/player_color_selector_edge" android:width="7dp"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    
    <item>
    	<shape >
    	    <solid android:color="@color/player_color_10"/>
    	    <corners android:radius="2dp"/>
    	    <stroke android:color="#333333" android:width="1dp"/>
    	</shape>    
    </item>
</selector>
