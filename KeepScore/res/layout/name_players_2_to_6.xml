<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_background"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical" >

    <View
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_weight=".05" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/text_player_names"
        android:textSize="24sp"
        android:textStyle="bold" />

    <View
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_weight=".05" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="0.85" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <View
                android:layout_width="0px"
                android:layout_height="0px"
                android:layout_weight=".125" />

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight=".75"
                android:orientation="vertical"
                android:padding="5dp" >

                <AutoCompleteTextView
                    android:id="@+id/edit_player_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:completionThreshold="1"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    android:textColor="@android:color/primary_text_light_nodisable" />

                <AutoCompleteTextView
                    android:id="@+id/edit_player_2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:completionThreshold="1"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    android:textColor="@android:color/primary_text_light_nodisable" />

                <AutoCompleteTextView
                    android:id="@+id/edit_player_3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:completionThreshold="1"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    android:textColor="@android:color/primary_text_light_nodisable" />

                <AutoCompleteTextView
                    android:id="@+id/edit_player_4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:completionThreshold="1"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    android:textColor="@android:color/primary_text_light_nodisable" />

                <AutoCompleteTextView
                    android:id="@+id/edit_player_5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:completionThreshold="1"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    android:textColor="@android:color/primary_text_light_nodisable" />

                <AutoCompleteTextView
                    android:id="@+id/edit_player_6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:completionThreshold="1"
                    android:imeOptions="actionDone"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    android:textColor="@android:color/primary_text_light_nodisable" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight=".25"
                android:orientation="vertical"
                android:padding="5dp" >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:background="@drawable/player_color_selector_01" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:background="@drawable/player_color_selector_02" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:background="@drawable/player_color_selector_03" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:background="@drawable/player_color_selector_04" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:background="@drawable/player_color_selector_05" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:background="@drawable/player_color_selector_06" />
            </LinearLayout>

            <View
                android:layout_width="0px"
                android:layout_height="0px"
                android:layout_weight=".125" />
        </LinearLayout>
    </ScrollView>

    <CheckBox
        android:id="@+id/checkbox_add_colors"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Add colors" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight=".025" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <View
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight=".25" />

        <Button
            android:id="@android:id/button1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:minWidth="200dp"
            android:text="@android:string/ok"
            android:textStyle="bold" />

        <View
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight=".25" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight=".025" />

</LinearLayout>