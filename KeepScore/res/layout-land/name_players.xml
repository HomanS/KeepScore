<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="center_vertical|center_horizontal"
	android:background="@drawable/main_background">

	<View android:layout_width="0px" android:layout_weight=".05"
		android:layout_height="0px" />

	<TextView android:layout_width="fill_parent" android:gravity="center_horizontal"
		android:layout_height="wrap_content" android:textSize="24sp"
		android:textStyle="bold" android:text="@string/text_player_names" />

	<View android:layout_width="0px" android:layout_weight=".05"
		android:layout_height="0px" />

	<ScrollView android:layout_width="fill_parent"
		android:layout_height="0px" android:layout_weight="0.85">

		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:gravity="center_horizontal">

			<View android:layout_width="0px" android:layout_weight=".125"
				android:layout_height="0px" />


			<TableLayout android:layout_width="0px"
				android:layout_weight=".375" android:layout_height="wrap_content"
				android:padding="5dp" android:stretchColumns="1">

                	<!-- TODO: use ViewStubs -->
                				
                    <include layout="@layout/table_row_player_and_color" android:id="@+id/player_and_color_1"/>
                    <include layout="@layout/table_row_player_and_color" android:id="@+id/player_and_color_3"/>
                    <include layout="@layout/table_row_player_and_color" android:id="@+id/player_and_color_5"/>
                    <include layout="@layout/table_row_player_and_color" android:id="@+id/player_and_color_7"/>
                    <include layout="@layout/table_row_player_and_color" android:id="@+id/player_and_color_9"/>
                    <include layout="@layout/table_row_player_and_color" android:id="@+id/player_and_color_11"/>
                    <include layout="@layout/table_row_player_and_color" android:id="@+id/player_and_color_13"/>
                    <include layout="@layout/table_row_player_and_color" android:id="@+id/player_and_color_15"/>
                    <include layout="@layout/table_row_player_and_color" android:id="@+id/player_and_color_17"/>
                    <include layout="@layout/table_row_player_and_color" android:id="@+id/player_and_color_19"/>

			</TableLayout>
            <TableLayout android:layout_width="0px"
                android:layout_weight=".375" android:layout_height="wrap_content"
                android:padding="5dp" android:stretchColumns="1">

                    <!-- TODO: use ViewStubs -->
                    <include layout="@layout/table_row_player_and_color" android:id="@+id/player_and_color_2"/>
                    <include layout="@layout/table_row_player_and_color" android:id="@+id/player_and_color_4"/>
                    <include layout="@layout/table_row_player_and_color" android:id="@+id/player_and_color_6"/>
                    <include layout="@layout/table_row_player_and_color" android:id="@+id/player_and_color_8"/>
                    <include layout="@layout/table_row_player_and_color" android:id="@+id/player_and_color_10"/>
                    <include layout="@layout/table_row_player_and_color" android:id="@+id/player_and_color_12"/>
                    <include layout="@layout/table_row_player_and_color" android:id="@+id/player_and_color_14"/>
                    <include layout="@layout/table_row_player_and_color" android:id="@+id/player_and_color_16"/>
                    <include layout="@layout/table_row_player_and_color" android:id="@+id/player_and_color_18"/>
                    <include layout="@layout/table_row_player_and_color" android:id="@+id/player_and_color_20"/>

            </TableLayout>
            

			<View android:layout_width="0px" android:layout_weight=".125"
				android:layout_height="0px" />
		</LinearLayout>

	</ScrollView>

	<View android:layout_width="fill_parent" android:layout_weight=".025"
		android:layout_height="0px" />

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="center_horizontal">

		<View android:layout_width="0px" android:layout_weight=".25"
			android:layout_height="fill_parent" />

		<Button android:id="@android:id/button1" android:text="@android:string/ok"
			android:layout_width="0px" android:layout_weight="0.75"
			android:minWidth="200dp" android:layout_height="wrap_content"
			android:textStyle="bold" />

		<View android:layout_width="0px" android:layout_weight=".25"
			android:layout_height="fill_parent" />

	</LinearLayout>


	<View android:layout_width="fill_parent" android:layout_weight=".025"
		android:layout_height="0px" />


</LinearLayout>